---
import Section from './Section.astro';
import { CA, tg, dex, x, ig, buynow } from '../utils/utils';
---

<Section 
  id="resources"
  title="Resources & Links"
  subtitle="Everything you need to join the Super Nigga community"
  backgroundColor="bg-gradient-to-br from-green-900 via-teal-900 to-black"
  backgroundImage="/hero2.png"
>
  <div class="max-w-4xl mx-auto">
    <!-- Contract Address -->
    <div class="mb-12">
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
        <h3 class="text-2xl font-bold mb-4 text-center text-yellow-400">Contract Address</h3>
        <div class="flex items-center justify-center space-x-4 bg-black/50 rounded-xl p-4">
          <code class="text-sm md:text-base font-mono text-green-400 break-all">{CA}</code>
          <button 
            id="copy-ca-btn"
            class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors flex items-center space-x-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <span class="text-sm">Copy</span>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Social Links Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <!-- Buy Now -->
      <a 
        href={buynow}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 rounded-2xl p-6 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-lg">Buy Now</h4>
            <p class="text-sm opacity-80">Get Super Nigga tokens</p>
          </div>
        </div>
      </a>
      
      <!-- Dexscreener -->
      <a 
        href={dex}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-500 hover:to-blue-600 rounded-2xl p-6 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-lg">Chart</h4>
            <p class="text-sm opacity-80">View on Dexscreener</p>
          </div>
        </div>
      </a>
      
      <!-- Telegram -->
      <a 
        href={tg}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-cyan-600 to-cyan-700 hover:from-cyan-500 hover:to-cyan-600 rounded-2xl p-6 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-lg">Telegram</h4>
            <p class="text-sm opacity-80">Join our community</p>
          </div>
        </div>
      </a>
      
      <!-- Twitter/X -->
      <a 
        href={x}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-gray-700 to-gray-800 hover:from-gray-600 hover:to-gray-700 rounded-2xl p-6 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-lg">Twitter/X</h4>
            <p class="text-sm opacity-80">Follow for updates</p>
          </div>
        </div>
      </a>
      
      <!-- Instagram -->
      <a 
        href={ig}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-pink-600 to-purple-700 hover:from-pink-500 hover:to-purple-600 rounded-2xl p-6 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
      >
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-lg">Instagram</h4>
            <p class="text-sm opacity-80">Visual updates</p>
          </div>
        </div>
      </a>
    </div>
    
    <!-- Additional Resources -->
    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
      <h3 class="text-2xl font-bold mb-6 text-center text-yellow-400">Getting Started</h3>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold">1</span>
          </div>
          <h4 class="font-bold mb-2">Get a Wallet</h4>
          <p class="text-sm opacity-80">Download Phantom or Solflare wallet</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold">2</span>
          </div>
          <h4 class="font-bold mb-2">Buy SOL</h4>
          <p class="text-sm opacity-80">Purchase SOL from an exchange</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold">3</span>
          </div>
          <h4 class="font-bold mb-2">Swap for Super Nigga</h4>
          <p class="text-sm opacity-80">Use our buy link to swap SOL</p>
        </div>
      </div>
    </div>
  </div>
</Section>

<script>
  // Copy contract address functionality
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copy-ca-btn');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText('{CA}');
          const originalText = copyBtn.innerHTML;
          copyBtn.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm">Copied!</span>
          `;
          copyBtn.classList.add('bg-green-600');
          copyBtn.classList.remove('bg-blue-600');
          
          setTimeout(() => {
            copyBtn.innerHTML = originalText;
            copyBtn.classList.remove('bg-green-600');
            copyBtn.classList.add('bg-blue-600');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy: ', err);
        }
      });
    }
  });
</script>